<div class="card card-center">
<div class="card-content">
  <span class="card-title">Signup</span>
    <form class="col s12">
       <div class="row">
        <div class="input-field col s6">
          <input id="fnane" type="text" class="">
          <label for="fnane">First Name</label>
        </div>
        <div class="input-field col s6">
          <input id="lnane" type="text" class="">
          <label for="lnane">Last Name</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <input id="email" type="email" class="validate">
          <label for="email">Email</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <input id="password" type="password" class="validate">
          <label for="password">Password</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <input id="password" type="password" class="validate">
          <label for="password">Re-Password</label>
        </div>
      </div>
       <button class="btn waves-effect waves-light brown lighten-1" {{action "signup"}}>
        Signup
       </button>
       {{#link-to "signin" class="btn waves-effect waves-light brown lighten-1"}}
        Signin
       {{/link-to}}
    </form>
</div>
</div>